# Cache headers for optimal caching strategy

# HTML files - short cache with revalidation
/*.html
  Cache-Control: public, max-age=0, must-revalidate
  ETag: true

# Main index.html - no cache to ensure updates
/index.html
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Version file - no cache to ensure fresh version checks
/version.json
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Service Worker - no cache to ensure updates
/sw.js
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Manifest - short cache with revalidation
/manifest.json
  Cache-Control: public, max-age=3600, must-revalidate

# Static assets with hash - long cache (immutable)
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Images - medium cache
/icons/*
  Cache-Control: public, max-age=86400

# App icon - medium cache
/app-icon.svg
  Cache-Control: public, max-age=86400

# Fonts - long cache
*.woff2
  Cache-Control: public, max-age=31536000, immutable

*.woff
  Cache-Control: public, max-age=31536000, immutable

# CSS and JS with hash - long cache
*.css
  Cache-Control: public, max-age=31536000, immutable

*.js
  Cache-Control: public, max-age=31536000, immutable
